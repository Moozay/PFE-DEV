      </div>
    </div>

    <script src="/js/easy_background.js"></script>

    <script>
      easy_background(
        "body",

        {
          slide: [
            "/images/1.jpg",
            "/images/2.jpg",
            "/images/3.jpg",
            "/images/4.jpg",
            "/images/5.jpg",
         
          ],

          delay: [3000, 2000, 2000, 2000, 2000],
        }
      );
